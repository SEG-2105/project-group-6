<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/propertyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/propertyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/propertyRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Rent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/propertyManagerEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property Manager Email"
        android:textSize="16sp" />

    <Button
        android:id="@+id/editPropertyRentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Rent" />

    <Button
        android:id="@+id/replaceManagerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Replace Manager" />

</LinearLayout>
